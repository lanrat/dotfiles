#!/usr/bin/env bash

docker_cli_plugin_metadata() {
	local vendor="lanrat"
	local description="show volume size for local volumes"
	cat <<-EOF
	{"SchemaVersion":"0.1.0","Vendor":"${vendor}","ShortDescription":"${description}"}
EOF
}

usage() {
	echo "Usage: docker volumesize <volume_name...>"
	echo ""
	echo "Show the size of one or more Docker volumes."
	echo ""
	echo "Arguments:"
	echo "  volume_name    Name(s) of the volume(s) to check size"
}

docker-volumesize() {
    if [ $# -lt 1 ]
    then
        usage
        exit 1
    fi

    for image in "$@"; do
        if ! docker volume ls -q | grep -q "^$image\$"; then
            echo "volume $image does not exist!"
            continue
            #exit 1
        fi

        docker run --rm --name "volume-size-$1" --volume "$image:/$image/:ro" bash du -sh /$image
    done
}

case "$1" in
	docker-cli-plugin-metadata)
		docker_cli_plugin_metadata
		;;
	__complete)
		docker volume ls -q | grep -v "^$"
		;;
	*)
		# Check if second argument is help flag
		if [[ "$2" == "--help" || "$2" == "-h" ]]; then
			usage
		else
			docker-volumesize "${@:2}"
		fi
		;;
esac

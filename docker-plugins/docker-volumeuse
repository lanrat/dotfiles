#!/usr/bin/env bash

docker_cli_plugin_metadata() {
	local vendor="lanrat"
	local description="print volumes in use by containers"
	cat <<-EOF
	{"SchemaVersion":"0.1.0","Vendor":"${vendor}","ShortDescription":"${description}"}
EOF
}

usage() {
	echo "Usage: docker volumeuse"
	echo ""
	echo "Print all Docker volumes and the containers that use them."
}

docker-volumes() {
    VOLUMES="$(docker volume ls -q)"
    for volume in $VOLUMES;
    do
        echo "$volume"
        docker ps -a --filter volume="$volume" --format "\t{{.Names}}\t{{.ID}}"
    done
}

case "$1" in
	docker-cli-plugin-metadata)
		docker_cli_plugin_metadata
		;;
	__complete)
		# No completion needed - command takes no arguments
		;;
	*)
		# Check if second argument is help flag
		if [[ "$2" == "--help" || "$2" == "-h" ]]; then
			usage
		else
			docker-volumes
		fi
		;;
esac

#!/usr/bin/env bash

docker_cli_plugin_metadata() {
	local vendor="lanrat"
	local description="remove untagged images"
	cat <<-EOF
	{"SchemaVersion":"0.1.0","Vendor":"${vendor}","ShortDescription":"${description}"}
EOF
}

usage() {
	echo "Usage: docker cleanimages"
	echo ""
	echo "Remove all untagged (dangling) Docker images."
}

docker-clean-images() {
    images="$(docker image ls -q --filter=dangling=true)"
	if [ -z "$images" ]; then
		echo "no images to clean"
	else
		# shellcheck disable=SC2086
    	docker image rm $images
	fi
}

case "$1" in
	docker-cli-plugin-metadata)
		docker_cli_plugin_metadata
		;;
	__complete)
		# No completion needed - command takes no arguments
		;;
	*)
		# Check if second argument is help flag
		if [[ "$2" == "--help" || "$2" == "-h" ]]; then
			usage
		else
			docker-clean-images
		fi
		;;
esac

# ~/.profile: executed by the command interpreter for login shells (non-gui).
# This file is not read by bash(1), if ~/.bash_profile or ~/.bash_login
# exists.
# shellcheck shell=sh

# test for brew path
if [ -d "/opt/homebrew/bin" ] ; then
    PATH="/opt/homebrew/bin:$PATH"
fi

# sbin PATH
if [ -d "/sbin" ] ; then
    PATH="/sbin:$PATH"
fi
if [ -d "/usr/local/sbin" ] ; then
    PATH="/usr/local/sbin:$PATH"
fi
if [ -d "/usr/sbin" ] ; then
    PATH="/usr/sbin:$PATH"
fi
# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH"
fi

# set PATH so it includes user's private bin if it exists
if [ -d "$HOME/.local/bin" ] ; then
    PATH="$HOME/.local/bin:$PATH"
fi
if [ -d "$HOME/go/bin" ] ; then
    PATH="$HOME/go/bin:$PATH"
fi

# platformio PATH
if [ -d "$HOME/.platformio/penv/bin" ] ; then
    PATH="$HOME/.platformio/penv/bin:$PATH"
fi

# npm global PATH
if [ -d "$HOME/.npm-global/bin" ] ; then
    PATH="$HOME/.npm-global/bin:$PATH"
fi

# -------------------
# Environment Variables
# -------------------

# Default applications
export PAGER='less'
export EDITOR='vim'

# Application settings
export P4DIFF='colordiff -u'
export PG_COLOR=auto
export DOCKER_SCAN_SUGGEST=false

# Less options: case-insensitive search, no-wrapping, exit if fits on screen
export LESS="-SiRFXn"

# Include local machine specific settings
# shellcheck source=/dev/null
if [ -f ~/.profile_local ]; then
    . ~/.profile_local
fi
